@model List<Talent_Hunt.Models.AssignedNotificationViewModel>

<h2>Assigned Notifications</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Event ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>
                    <img src="@item.Image" alt="Event Image" style="width:100px;height:100px;" />
                </td>
            </tr>
        }
    </tbody>
</table>
