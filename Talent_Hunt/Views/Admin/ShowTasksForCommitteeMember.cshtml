@model List<Talent_Hunt.Models.Task>

@{
    ViewBag.Title = "Task List";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary fw-bold"><i class="fas fa-tasks"></i> Tasks for Event</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm rounded-3">
            <i class="fas fa-exclamation-circle me-2"></i>No tasks available for this event.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var task in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="@Url.Action("TaskDetailsForCommitteeMember", "Admin", new { id = task.Id })" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow rounded-4 overflow-hidden task-card" style="transition: transform 0.2s;">
                            @if (!string.IsNullOrEmpty(task.Image))
                            {
                                <img src="http://localhost/TalentHunt1/Images/@task.Image"
                                     class="card-img-top"
                                     style="height: 200px; object-fit: cover;"
                                     alt="Task Image" />
                            }
                            else
                            {
                                <div class="bg-light d-flex justify-content-center align-items-center"
                                     style="height: 200px; color: #888;">
                                    No Image Available
                                </div>
                            }

                            <div class="card-body">
                                <h5 class="card-title text-primary">@task.Description</h5>
                                <p class="card-text">
                                    <strong>Start Time:</strong> @task.TaskStartTime <br />
                                    <strong>End Time:</strong> @task.TaskEndTime
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>

<style>
    .task-card:hover {
        transform: scale(1.02);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
</style>
