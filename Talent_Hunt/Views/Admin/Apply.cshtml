@{
    ViewBag.Title = "Apply for Event";
    int userId = Convert.ToInt32(Request.QueryString["UserId"]);
    int eventId = Convert.ToInt32(Request.QueryString["EventId"]);
}

<h2>Apply for Event</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<form method="post" action="/Admin/Apply">
    <input type="hidden" name="UserId" value="@userId" />
    <input type="hidden" name="EventId" value="@eventId" />

    <div class="form-group">
        <label for="PhoneNo">Phone Number</label>
        <input type="text" class="form-control" name="PhoneNo" required />
    </div>

    <div class="form-group mt-2">
        <label for="City">City</label>
        <input type="text" class="form-control" name="City" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit Application</button>
</form>
